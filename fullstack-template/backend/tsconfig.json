{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "*": [
        "node_modules/*",
        "src/typings/*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "reflect-metadata"
    ],
    "lib": [
      "es6"
    ]
  },
  "include": [
    "src/**/*"
  ],
}